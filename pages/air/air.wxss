.air {
    padding: 40rpx;
}

page {
    background: #fafafa;
}
.a-dpt,.a-ept{
    width:210rpx;
}
.a-item {
    padding: 28rpx;
    background: #fff;
    margin: 30rpx;
    box-shadow: 0 4px 20px rgba(100, 100, 100, 0.1);
}

.a-info {
    display: flex;
    justify-content: space-between;
}

.a-price {
    text-align: right;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    flex-basis:100rpx;
}

.a-price .price {
    font-size: 40rpx;
}

.a-img {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
}

.a-tag {
    line-height: 44rpx;
    width: 88rpx;
    font-size: 22rpx;
    text-align: center;
    background: #eee;
    border-radius: 4px;
}

.a-dpt {
    text-align: left;
}

.a-bottom {
    display: flex;
    font-size: 24rpx;
    justify-content: space-between;
    align-items: center;
    color: #555;
    margin-top: 20rpx;
    width: 100%;
}

.a-airport {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-right:20rpx;
}

.a-airport .icon {
    font-size:46rpx;
    text-align:center;
    margin-top:-4rpx;
    width:80rpx;
    display:flex;
    justify-content:center;
    align-items:center;
}

.a-port {
    font-size: 26rpx;
    display: flex;
    align-items: center;
}

.a-ept {
    text-align: right;
}

.a-time {
    font-size: 40rpx;
    font-weight: 800;
}

.a-area {
    font-size: 26rpx;
    color: #888;
}

.a-grey {
    font-size: 26rpx;
    color: #888;
    margin-top: 14rpx;
}

.air-input {
    border-bottom: 1px solid #ccc;
    padding: 30rpx 0;
    flex-grow: 2;
    
}

.air-inuts {
    width: 100%;
}

.air-local {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.air-inputs {
    display: flex;
    align-items: center;
}

.air-form .icon {
    font-size: 44rpx;
   margin-right:15rpx;
}

.air-date {
    padding: 20rpx 0;
}

.date-title {
    font-size: 24rpx;
}



.border-no {
    border: none;
}

.f-bar {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 -10px 20px rgba(100, 100, 100, 0.1);
}

.f-bar .icon {
    font-size: 43rpx;
    margin-bottom: 2rpx;
}

.f-bar>view {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100rpx;
    width: 33.3333333%;
    font-size: 22rpx;
    color: #555;
}

.date-bar {
    display: flex;
    justify-content: space-between;
    background: #fff;
    box-shadow: 0 4px 15px rgba(100, 100, 100, 0.1);
    z-index: 10;
}

.date-bar .day {
    font-size: 28rpx;
    display:flex;
    align-items:center;
    justify-content:center;
}

.date-bar .day-prev::before {
    content: '';
    display: block;
    width: 16rpx;
    height: 16rpx;
    border: 2px solid #ccc;
    border-right: none;
    border-bottom: none;
    transform: rotate(-45deg);
    margin-right:10rpx;
}
.date-bar .day-next::after {
    content: '';
    display: block;
    width: 16rpx;
    height: 16rpx;
    border: 2px solid #ccc;
    border-left: none;
    border-top: none;
    transform: rotate(-45deg);
     margin-left:10rpx;
}

.date-bar>view {
    text-align: center;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    width: 200rpx;
}

.date-bar-time {
    flex-grow: 2;
}

.date-bar {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    z-index: 10;
}

.scroll-air {
    position: absolute;
    top: 90rpx;
    bottom: 100rpx;
    left: 0;
    right: 0;
}

.line-panel {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 90rpx;
    background: #fff;
    padding: 0 40rpx;
    animation: slideInUp .4s ease-in;
}

.line-item {
    display: flex;
    align-items: center;
    font-size: 32rpx;
    padding: 35rpx 0;
    justify-content: space-between;
}

.line-panel {
    box-shadow: 0 -12px 30px rgba(100, 100, 100, 0.2);
}

.line-panel image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.line-active::after {
    content: '';
    display: block;
    width: 30rpx;
    height: 12rpx;
    border: 2px solid tomato;
    border-top: none;
    border-right: none;
    transform: rotate(-45deg);
}

.toggle-local {
    width: 80rpx;
    height: 80rpx;
    background: #333;
    color: #fff;
    font-size: 42rpx;
    line-height:80rpx;
    border-radius: 100px;
    margin-right:none;
}
